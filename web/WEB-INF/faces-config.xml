<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>     
        <view-handler>org.ajax4jsf.application.AjaxViewHandler</view-handler>
    </application>
    
    <!--  **************************   Beans   **************************   -->
    <managed-bean>
        <description>Controlador</description>
        <managed-bean-name>administrador</managed-bean-name>
        <managed-bean-class>controlador.AdministradorBO</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    
    
    <managed-bean>
        <description>Login</description>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>controlador.LoginBO</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Perfil</description>
        <managed-bean-name>perfil</managed-bean-name>
        <managed-bean-class>controlador.PerfilBO</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>    
    </managed-bean>
    
    <managed-bean>
        <description>Roles</description>
        <managed-bean-name>roles</managed-bean-name>
        <managed-bean-class>controlador.RolesBO</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Bundle</description>
        <managed-bean-name>bundleBean</managed-bean-name>
        <managed-bean-class>general.MessageBundle</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <!--   **************************   Beans Docente   **************************-->    
    <managed-bean>
        <description>Controlador</description>
        <managed-bean-name>docente</managed-bean-name>
        <managed-bean-class>controlador.DocenteBO</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Examenes</description>
        <managed-bean-name>examen</managed-bean-name>
        <managed-bean-class>controlador.ExamenBO</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <!--   **************************   Beans Sesion   **************************-->    
    <managed-bean>
        <description>Sesion</description>
        <managed-bean-name>sesion</managed-bean-name>
        <managed-bean-class>general.SessionVariables</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    
    <!--   **************************   Reglas de NavegaciÃ³n   **************************-->
    <!--   **************************   Login   **************************-->
    <navigation-rule>
        <from-view-id>
            /Vista/Login/login.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                a1
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/inicio.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                d1
            </from-outcome>
            <to-view-id>
                /Vista/Docentes/inicio.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                jc1
            </from-outcome>
            <to-view-id>
                /Vista/JefeCarrera/inicio.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                invalido
            </from-outcome>
            <to-view-id>
                /Vista/Login/login.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                usario
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/usuarios.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--   **************************   Administrador   **************************-->
    <navigation-rule>
        <from-view-id>
            /Vista/Administrador/perfil.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                valido
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/inicio.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                invalido
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/perfil.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /Vista/Administrador/usuario-nuevo.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                usario
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/usuarios.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                invalido
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/perfil.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /Vista/Administrador/Claves/claves.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                Claves/claves_nuevo
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/Claves/claves_nuevo.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                editar
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/Claves/claves_nuevo.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                consulta
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/Claves/claves.jsp
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                claves
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/Claves/claves.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /Vista/Administrador/Claves/claves_nuevo.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                claves
            </from-outcome>
            <to-view-id>
                /Vista/Administrador/Claves/claves.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /Vista/Administrador/inicio.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                logout
            </from-outcome>
            <to-view-id>
                /Vista/Login/login.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--   **************************   Docentes   **************************-->
    <navigation-rule>
        <from-view-id>
            /Vista/Docentes/inicio.jsp
        </from-view-id>
        <navigation-case>
            <from-outcome>
                logout
            </from-outcome>
            <to-view-id>
                /Vista/Login/login.jsp
            </to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
